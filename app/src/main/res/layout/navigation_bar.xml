<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="340px"
        android:background="#006325"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/username_bar"
            android:layout_width="match_parent"
            android:layout_height="42px"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/username_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="2mm"
                android:layout_weight="0.75"
                android:text="YourUsername"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="end|center"
                android:layout_weight="0.1"
                android:scaleType="fitCenter"
                android:src="@drawable/home_logo"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.125"
            android:background="#000000"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pages_bar"
            android:layout_width="match_parent"
            android:layout_height="42px"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/map_button"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="end|center"
                android:layout_weight="0.25"
                android:scaleType="fitCenter"
                android:src="@drawable/map_logo"/>

            <ImageView
                android:id="@+id/calendar_button"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="end|center"
                android:layout_weight="0.25"
                android:scaleType="fitCenter"
                android:src="@drawable/calendar_logo"/>

            <ImageView
                android:id="@+id/faq_button"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="end|center"
                android:layout_weight="0.25"
                android:scaleType="fitCenter"
                android:src="@drawable/faq_logo"/>

            <ImageView
                android:id="@+id/smm_button"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="end|center"
                android:layout_weight="0.25"
                android:scaleType="fitCenter"
                android:src="@drawable/media_icon"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.125"
            android:background="#000000"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>